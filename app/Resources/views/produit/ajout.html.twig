{% extends 'base2.html.twig' %}

{% block body %}



<div class="col-md-4">
    <section class="panel">
        <h1>Creation produit</h1>
        <br>
        {{ form_start(form) }}
        <h5>Nom produit</h5>
        {{ form_row(form.nomP, {'attr': {'class': 'form-control'}}) }}

        <h5>ISBN</h5>
        {{ form_row(form.ISBN, {'attr': {'class': 'form-control'}}) }}

        <h5>Prix produit</h5>
        {{ form_row(form.prix, {'attr': {'class': 'form-control'}}) }}

        <h5>Quantite </h5>
        {{ form_row(form.quantite, {'attr': {'class': 'form-control'}}) }}

        <h5>Description</h5>
        {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}

        <h5>Categorie</h5>
        {{ form_row(form.categorie, {'attr': {'class': 'form-control'}}) }}

        <h5>Image</h5>
        {{ form_row(form.imageFile)}}
        <br>
        <input type="submit" value="Creer" class="btn btn-primary" style="margin-left: 110px;" />
        {{ form_end(form) }}

    </section>
</div>

{% endblock %}