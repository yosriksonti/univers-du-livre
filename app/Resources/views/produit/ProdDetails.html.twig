{% extends 'base.html.twig' %}

{% block body %}
    <!-- breadcrumb part start-->
    <section class="breadcrumb_part single_product_breadcrumb">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner">
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb part end-->

    <!--================Single Product Area =================-->
    <div class="product_image_area">
        <div class="container">
            <div class="card mb-3" style="max-width: 1200px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="{{ asset('uploads/images/' ~ produit.image) }}" style="max-height: 24rem; margin-bottom: fill">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h4 class="card-title" style="margin-left: -8rem;">{{ produit.nomP }}</h4>
                            <h6 class="card-title" style="margin-left: -6rem; ">Catégorie : {{ produit.categorie.nomCat }}</h6>
                            <p class="card-text" style="margin-left: -6rem; margin-bottom: 1.5rem;">{{produit.description}}</p>

                            <h5 class="card-title" style="margin-left: -6rem; ">Prix : {{ produit.prix }} DT</h5>
                            <p class="card-text"><small class="text-muted" style="margin-left: -6rem;">Quantité: {{ produit.quantite }}</small></p>
                        </div>
                        <div class="add_to_cart" >
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                <a href="{{ path('produit_ajoutAuPanier', {'id':produit.id}) }}" class="btn_3">Ajouter au panier</a>
                            {% else  %}
                                <a href="{{ path('fos_user_security_login') }}" class="btn_3" >Ajouter au panier</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <!--================End Single Product Area =================-->

{% endblock %}

