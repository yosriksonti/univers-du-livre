{% extends 'base.html.twig' %}

{% block body %}

    <!-- breadcrumb part start-->
    <section class="breadcrumb_part">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner">
                        <h2>Panier</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb part end-->

    <!--================Cart Area =================-->
    <section class="cart_area section_padding">
        <div class="container">
            <div class="cart_inner">
                {% if items | length >0 %}
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">Produit</th>
                            <th scope="col">Description</th>
                            <th scope="col">Prix</th>
                            <th scope="col">Quantite</th>
                            <th scope="col">Total</th>
                            <th scope="col">Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for item in items %}
                        <tr>
                            <td>
                                <div class="media">
                                    <div class="d-flex">
                                        <img src="{{ asset('uploads/images/' ~ item.produit.image) }}" alt="#" />
                                    </div>
                                </div>
                            </td>
                            <td>
                            <div class="media-body">
                                <p>{{ item.produit.description }}</p>
                            </div>
                            </td>
                            <td>
                                <h5>Prix unitaire: {{ item.produit.prix }} DT</h5>
                            </td>
                            <td>
                                <h5> {{ item.quantite }} </h5>
                            </td>
                            <td>
                                <h5>{{ item.quantite * item.produit.prix }} DT</h5>
                            </td>
                            <td>
                                <a href="{{ path('produit_remove', {'id':item.produit.id}) }}" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        {% endfor %}


                        <tr>
                            <td></td>
                            <td></td>
                            <td>
                                <h5>Valeur totale du panier:</h5>
                            </td>
                            <td>
                                <h5>{{ total }} DT</h5>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                    {% else %}
                      <h4>Votre panier est encoe vide</h4>
                    {% endif %}
                    <div class="checkout_btn_inner float-right">
                        <a class="btn_1" href="{{ path('produit_index') }}">Continuer les courses</a>
                        <a class="btn_1 checkout_btn_1" href="/commande">Valider commande</a>
                    </div>
                </div>
            </div>
    </section>
    <!--================End Cart Area =================-->



{% endblock body %}