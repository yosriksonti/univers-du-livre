{% extends 'base.html.twig' %}
{% block body %}

    <!-- end: sidebar -->

    <!-- breadcrumb part start-->
    <section class="breadcrumb_part">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner">
                        <h2>Produit par commande</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb part end-->


    <section class="cart_area section_padding">
        <div class="container">
            <div class="cart_inner">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>

                            <th scope="col">Nom produit</th>
                            <th scope="col">Quantite</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for prodCom in prodComs %}
                            <tr>
                                <td>
                                    <h5>{{ prodCom.nomProduit }}</h5>
                                </td>
                                <td>
                                    <h5> {{ prodCom.quantiteProduit }} </h5>
                                </td>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
            </div>
    </section>




    <!-- end: page -->
{% endblock body %}